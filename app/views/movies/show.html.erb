<h1>Movie Info Page</h1>

<%= "Movie title: #{@movie.title}" %><br>
<%= "Created: #{@movie.creation_year}" %><br>
<%= "Genre: #{@movie.genre}" %><br>

<h2>Actors</h2>
<% @movie.actors_by_age.each do |actor| %>
  <%= actor.name %>
<% end %>
<p>Average Age of Actors: <%= @movie.average_actor_age.round(2) %></p>

<%= form_with url: "/movie_actors/#{@movie.id}", method: :post do |form| %>
  <%= form.number_field :actor_id %>
  <%= form.submit "Add Actor"%>
<% end %>